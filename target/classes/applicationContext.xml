<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="questionRepository" class="ru.otus.repositories.impl.QuestionRepositoryImpl">
        <constructor-arg value="questions.csv"/>
    </bean>

    <bean id="answerRepository" class="ru.otus.repositories.impl.AnswerRepositoryImpl">
        <constructor-arg value="answers.csv"/>
    </bean>

    <bean id="questionService" class="ru.otus.services.impl.QuestionServiceImpl">
        <constructor-arg name="questionRepository" ref="questionRepository"/>
    </bean>

    <bean id="answerService" class="ru.otus.services.impl.AnswerServiceImpl">
        <constructor-arg name="answerRepository" ref="answerRepository"/>
    </bean>

</beans>